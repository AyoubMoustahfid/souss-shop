<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title><%= pageTitle%> - Online Shop</title>

    <link rel="stylesheet" type="text/css" href="/styleSignUp.css">

    <link href="https://fonts.googleapis.com/css?family=Poppins&display=swap" rel="stylesheet">
</head>
<body>
<section>
<div class="container">

    <div class="user signupBx">
        <div class="formBx">
            <form action="/signup" method="POST">
                <h2>Create an account</h2>
                <input type="text" name="username" placeholder="Username">
                <% let usernameError = validationErrors.find(err => err.param === 'username') %>
                        <% if (usernameError) { %>
                            <p class="alert alert-danger">
                                <%= usernameError.msg %>
                            </p>
                        <% } %>
                <input type="email" name="email" placeholder="Enter Your Email">
                <% let emailError = validationErrors.find(err => err.param === 'email') %>
                <% if (emailError) { %>
                    <p class="alert alert-danger">
                        <% emailError.msg %>
                    </p>
                <% } %>
                <input type="password" name="password" placeholder="Password">
                <% let passwordError = validationErrors.find(err => err.param === 'password') %>
                <% if (passwordError) { %>
                    <p class="alert alert-danger">
                        <% passwordError.msg %>
                    </p>
                <% } %>
                <input type="password" name="confirmPassword" placeholder="Confirm Password">
                <% let passwordConfirmError = validationErrors.find(err => err.param === 'confirmPassword') %>
                <% if (passwordConfirmError) { %>
                    <p class="alert alert-danger">
                        <% passwordConfirmError.msg %>
                    </p>
                <% } %>
                <input type="submit" name="" value="Login">
                <p class="signup">Already have an account ? <a href="/login">Sign In.</a></p>

            </form>
            <!-- <% if(authError) { %>
                <br>
                <p class="alert alert-danger">
                    <%= authError%>
                </p>
            <% } %>
            <% for(let error of validationErrors){ %>
               <p class="alert alert-danger">
                   <%=  error.msg %>
               </p>
            <% } %> -->
            
        </div>
        <div class="imgBx" style="width: 100px;"><img src="/Sign-up.png" style="height: 100%;"></div>
    </div>
</div>
</section>

</body>
</html>