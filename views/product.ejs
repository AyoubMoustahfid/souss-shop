<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    
    <!-- Product Css -->
    <link rel="stylesheet" href="/styleProduct.css">
    <link rel="stylesheet" type="text/css" href="/styleNavbar.css"> 
    <title>Details Product</title>
  </head>
  <body>

  <%- include("parts/navbar")%>

    <div class="container-fluid" id="product-detail">
      <% if(!product){ %>
        <div class="alert alert-danger" style="width: 59%;height: 64px;display: flex;justify-content: center;margin: inherit;">
           There is no product matches this id
        </div>
      <% }else{ %> 
        <div class="imgBx">
          <img src="/<%= product.image %>" alt="Nike Jordan Proto-Lyte Image" height=" 548px">
        </div>
        <div class="details">
          <div class="content">
            <h2><%= product.name %> <br>
              <span><%= product.category %></span>
            </h2>
            <p><%= product.description %></p>
            <div class="d-flex justify-content-between" id="price">
                <h3>$ <%= product.price %></h3>
                <form action="/cart" method="POST">
                  <input type="number" name="amount" class="form-control">
                  <input type="hidden" name="name" value="<%= product.name%>">
                  <input type="hidden" name="price" value="<%= product.price%>">
                  <input type="hidden" name="image" value="<%= product.image %>">
                  <input type="hidden" name="productId" value="<%= product._id%>">
                  <input type="hidden" name="redirectTo" value="/">    
                  <button type="submit" style="margin-left: -265px;margin-top: 29px;">Buy Now</button>
                </form>
            </div>
            
          </div>
        </div>
    <% } %>
      </div>

    

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>